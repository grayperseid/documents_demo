<div class="row justify-content-center">
  <card class="index-card">
    <p id="notice" class="text-center"><%= notice %></p>
    <h2 class="doc-title">Documents</h2>

    <card-body>
      <table>
        <thead class="doc-table">
          <tr>
            <th class="doc-header">Name</th>
            <th class="doc-header">Mime type</th>
            <th class="doc-header">Size</th>
            <th class="doc-header">Account ID</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @documents.each do |document| %>
            <tr>
              <td><%= link_to "#{document.name}", document %></td>
              <td><%= document.mime_type %></td>
              <td><%= document.display_size %></td>
              <td><%= document.account_id %></td>
              <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure you want to delete this document?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </card-body>
  </card>
</div>

<div class="row justify-content-center new-doc">
  <%= link_to 'New Document', new_document_path %>
</div>
<div class="row justify-content-center">
  <%= link_to 'Search Documents', search_documents_path %>
</div>
